# MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# GitHub MCP Server
GITHUB_TOKEN=your_github_personal_access_token

# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coral_collective_dev

# Supabase Configuration (if using Supabase instead of raw Postgres)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Brave Search API
BRAVE_API_KEY=your_brave_api_key

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_TEAM_ID=your-slack-team-id

# E2B Configuration
E2B_API_KEY=your_e2b_api_key

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# Project Configuration
PROJECT_ROOT=/Users/nathanial.smalley/projects/coral_collective

# Security Settings
MCP_READ_ONLY_MODE=false
MCP_SANDBOX_ENABLED=true
MCP_AUDIT_LOG_PATH=./mcp/logs/audit.log